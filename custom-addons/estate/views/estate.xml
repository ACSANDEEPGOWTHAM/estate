<?xml version="1.0" encoding="utf-8"?>

<openerp>
    <data>

        <record model="ir.actions.act_window" id="action_list_block">
            <field name="name">Estate Structure</field>
            <field name="res_model">estate.estate_block</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record model="ir.ui.view" id="estate_block_tree">
            <field name="name">estate.estate_block_tree</field>
            <field name="model">estate.estate_block</field>
            <field name="arch" type="xml">
                <tree string="Estate Block">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <!-- Extend Location View -->
        <record model="ir.ui.view" id="view_form_location_inherited">
            <field name="name">Location - Estate Extension</field>
            <field name="model">stock.location</field>
            <field name="inherit_id" ref="stock.view_location_form"/>
            <field name="arch" type="xml">
                <field name="usage" position="after">
                    <field name="estate_location_level"/>
                </field>
            </field>
        </record>

        <record model="ir.ui.view" id="estate_block_form">
            <field name="name">estate.estate_block_form</field>
            <field name="model">estate.estate_block</field>
            <field name="arch" type="xml">
                <form string="Block">
                    <field name="name"/>
                </form>
            </field>
        </record>

        <menuitem id="main_estate_menu" name="Plantation"/>
        <menuitem id="estate_config_menu" name="Configuration" parent="main_estate_menu" sequence="100"/>
        <menuitem id="estate_blocking_menu" name="Blocking" parent="estate_config_menu"/>
        <menuitem id="estate_block_menu" name="Estate Structure" parent="estate_blocking_menu" action="action_list_block"/>

    </data>
</openerp>