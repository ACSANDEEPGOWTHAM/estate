<openerp>
    <data>
        <!--view , log oil -->
         <record model="ir.ui.view" id="view_button_vehicle_log">
             <field name="name">Vehicle Log Oil</field>
             <field name="model">fleet.vehicle</field>
             <field name="inherit_id" ref="fleet.fleet_vehicle_form"/>
             <field name="arch" type="xml">
                 <xpath expr="//div[@class='oe_right oe_button_box']" position="inside">
                     <button name="%(fleet_vehicle_log_oil_act)d"
                         type="action"
                         class="oe_stat_button"
                         icon="fa-flask"
                         help="show the oil logs for this vehicle">
                         <field name="oil_log_count" widget="statinfo" string="Oil"/>
                     </button>

                     <button name="%(fleet_vehicle_log_otherservice_act)d"
                         type="action"
                         class="oe_stat_button"
                         icon="fa-book"
                         help="show the Other Service logs for this vehicle">
                         <field name="other_service_log_count" widget="statinfo" string="Other Service"/>
                     </button>

                     <button name="%(fleet_vehicle_log_sparepart_act)d"
                         type="action"
                         class="oe_stat_button"
                         icon="fa-wrench"
                         help="show the Sparepart logs for this vehicle">
                         <!--<field name="sparepart_log_count" widget="statinfo" string="Sparepart"/>-->
                     </button>
                 </xpath>
             </field>
         </record>
    </data>
</openerp>