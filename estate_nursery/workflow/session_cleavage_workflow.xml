<openerp>
    <data>
        <!-- Nursery cleavage-->
        <record id="estate_nursery.separation_approval" model="workflow">
            <field name="name">Estate Nursery Separation Workflow</field>
            <field name="osv">estate.nursery.cleavage</field>
            <field name="on_create">True</field>
        </record>

         <record model="workflow.activity" id="separation_draft">
            <field name="name">Draft</field>
            <field name="wkf_id" ref="estate_nursery.separation_approval"/>
            <field name="flow_start" eval="True"/>
            <field name="kind">function</field>
            <field name="action">action_draft()</field>
        </record>

        <record model="workflow.activity" id="separation_confirmed">
            <field name="name">Confirmed</field>
            <field name="wkf_id" ref="estate_nursery.separation_approval"/>

            <field name="split_mode">XOR</field>
            <field name="kind">function</field>

            <field name="action">action_confirmed()</field>
        </record>

        <record model="workflow.activity" id="separation_first_approved">
            <field name="name">First Approved</field>
            <field name="wkf_id" ref="estate_nursery.separation_approval"/>

            <field name="split_mode">XOR</field>
            <field name="kind">function</field>

            <field name="action">action_approved1()</field>

        </record>

        <record model="workflow.activity" id="separation_second_approved">
            <field name="name">Second Approved</field>
            <field name="wkf_id" ref="estate_nursery.separation_approval"/>

            <field name="split_mode">XOR</field>
            <field name="kind">function</field>

            <field name="action">action_approved2()</field>
        </record>

        <record model="workflow.activity" id="separation_done">
            <field name="name">Done</field>
            <field name="wkf_id" ref="estate_nursery.separation_approval"/>

            <field name="split_mode">XOR</field>
            <field name="kind">function</field>

            <field name="action">action_approved()</field>
        </record>

        <record model="workflow.transition" id="separation_draft_to_confirmed">
            <field name="act_from" ref="separation_draft"/>
            <field name="act_to" ref="separation_confirmed"/>
            <field name="signal">signal_confirm</field>
        </record>
        <record model="workflow.transition" id="separation_confirmed_to_draft">
            <field name="act_from" ref="separation_confirmed"/>
            <field name="act_to" ref="separation_draft"/>
            <field name="signal">signal_draft</field>
        </record>
        <record model="workflow.transition" id="separation_confirmed_to_first_approved">
            <field name="act_from" ref="separation_confirmed"/>
            <field name="act_to" ref="separation_first_approved"/>
            <field name="signal">signal_approved1</field>
        </record>
        <record model="workflow.transition" id="separation_first_approved_to_draft">
            <field name="act_from" ref="separation_first_approved"/>
            <field name="act_to" ref="separation_draft"/>
            <field name="signal">signal_draft</field>
        </record>

        <record model="workflow.transition" id="separationfirstapproved_to_second_approved">
            <field name="act_from" ref="separation_first_approved"/>
            <field name="act_to" ref="separation_second_approved"/>
            <field name="signal">signal_approved2</field>
        </record>

        <record model="workflow.transition" id="separationsecond_approved_to_draft">
            <field name="act_from" ref="separation_second_approved"/>
            <field name="act_to" ref="separation_draft"/>
            <field name="signal">signal_draft</field>
        </record>

        <record model="workflow.transition" id="separationsecond_approved_to_done">
            <field name="act_from" ref="separation_second_approved"/>
            <field name="act_to" ref="separation_done"/>
            <field name="signal">signal_done</field>
        </record>

        <record model="workflow.transition" id="separationdone_to_draft">
            <field name="act_from" ref="separation_done"/>
            <field name="act_to" ref="separation_draft"/>
            <field name="signal">signal_draft</field>
        </record>
    </data>
</openerp>