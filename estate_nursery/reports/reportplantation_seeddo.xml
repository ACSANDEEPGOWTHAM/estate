<openerp>
    <data>
        <template id="report_seeddo_div_document">
            <t t-call="report.external_layout">
                <div class="page">
                    <!--Header Row-->
                        <div class="row col-xs-12" style="font-family: times; background-color:#568eff;border: 1px solid #568eff;color:#ffffff; font-size:20pt;">
                            <div class="col-xs-12" >
                                <p style="text-align:center;font-family: times;" >Report Seed Delivery Order</p>
                            </div>
                        </div>

                    <!--Location  Row -->
                         <div class="row col-xs-12">
                            <div class="col-xs-12" style="font-family: times;font-size:14pt;">
                                <div class="row">
                                    <div class="col-xs-5">
                                        <table>
                                            <tr>
                                                <td><b style="width:10%;font-family: times; font-size:10pt;">Location Seed:</b></td>
                                                <td><p style="font-family: times; font-size:10pt;"/></td>
                                                <td coolspan="4">
                                                    <tr>
                                                        <td><b style="width:10%;font-family: times; font-size:10pt;">No SPB :</b></td>
                                                        <td><p t-field="o.seeddo_code" style="font-family: times; font-size:10pt;"/></td>
                                                    </tr>
                                                </td>
                                            </tr>
                                        </table>
                                    </div>
                                    <div class="col-xs-5" >
                                        <table>
                                            <tr>
                                                <td><b style="width:10%;font-family: times; font-size:10pt;">SPB Date: </b></td>
                                                <td><p t-field="o.date_request" style="font-family: times; font-size:10pt;"/></td>
                                            </tr>
                                        </table>
                                        <hr></hr>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <hr/>
                        <br/>

                    <!-- SPK ROW -->
                        <div class="row col-xs-12">
                            <div class="col-xs-12" style="font-family: times;font-size:14pt;">
                                <div class="row">
                                    <div class="col-xs-5">
                                        <table>
                                            <tr>
                                                <td><b style="font-family: times; font-size:10pt;width:10%;">No SPK:</b></td>
                                                <td><p style="font-family: times; font-size:10pt;"/></td>
                                                <td coolspan="4">
                                                    <tr>
                                                        <td><b style="font-family: times; font-size:10pt;width:10%;">Date SPK:</b></td>
                                                        <td><p style="font-family: times; font-size:10pt;"/></td>
                                                    </tr>
                                                </td>
                                            </tr>
                                        </table>
                                    </div>
                                    <div class="col-xs-5" >
                                        <table>
                                            <tr>
                                                <td><b style="font-family: times; font-size:10pt;width:10%;">No Contractor:</b></td>
                                                <td><p style="font-family: times; font-size:10pt;"/></td>
                                                <td coolspan="4">
                                                    <tr>
                                                        <td><b style="font-family: times; font-size:10pt; width:10%;">Name Contractor:</b></td>
                                                        <td><p style="font-family: times; font-size:10pt;"/></td>
                                                    </tr>
                                                </td>
                                            </tr>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <br />

                        <!-- BPB  Header ROW -->
                        <div class="row col-xs-12" style="font-family: times;border: 1px solid #568eff;color:black; font-size:12pt;">
                                <div class="col-xs-12" >
                                    <b style="text-align:left;font-family: times;" >List BPB</b>
                                </div>
                        </div>

                        <div class="row col-xs-12" style="background-color:#568eff;border: 1px solid #568eff;color:#ffffff;">
                           <div class="row col-xs-5">
                               <table class="table table-condensed">
                                 <thead style="background-color:#568eff;border: 1px solid #568eff;color:#ffffff;">
                                    <tr height="55">
                                        <th style="width:30%; border-bottom: 0px solid black !important;">No BPB</th>
                                        <th style="width:10%; border-bottom: 0px solid black !important;">Date BPB</th>
                                        <th style="width:10%; border-bottom: 0px solid black !important;">Estate</th>
                                        <th style="width:10%; border-bottom: 0px solid black !important;">Division</th>
                                    </tr>
                                    </thead>
                                    <tbody class="selection_tbody">
                                        <tr height="43"  t-foreach="o.batch_planted_ids" t-as="f" style="font-family: times; font-size:8pt;">
                                            <td style="width:10%;"><span t-field="f.bpb_id"/></td>
                                            <td style="width:10%;"><span t-field="f.bpb_id.date_request"/></td>
                                            <td style="width:10%;"><span t-field="f.bpb_id.kebun_location_id"/></td>
                                            <td style="width:10%;"><span t-field="f.bpb_id.divisi_location_id"/></td>
                                            <tr height="43" t-foreach="f.bpb_id.requestline_ids" t-as="s" style="font-family: times; font-size:8pt;">
                                                <td style="width:10%; color:#568eff;"><span t-field="s.inherit_location_id"/></td>
                                                <td style="width:10%;"></td>
                                                <td style="width:10%;"></td>
                                                <td style="width:10%;"></td>
                                            </tr>
                                        </tr>
                                    </tbody>
                                </table>
                           </div>
                            <div class="row col-xs-5">
                                <table class="table table-condensed">
                                    <thead style="background-color:#568eff;border: 1px solid #568eff;color:#ffffff;">
                                    <tr height="55">
                                        <th style="width:15%; border-bottom: 0px solid black !important;">Block</th>
                                        <th style="width:25%; border-bottom: 0px solid black !important;">Year Planted</th>
                                        <th style="width:30%; border-bottom: 0px solid black !important;">Large Area(Ha)</th>
                                        <th style="width:30%; border-bottom: 0px solid black !important;">&#931; Seed Request</th>
                                    </tr>
                                    </thead>
                                        <tbody class="selection_tbody">
                                            <tr height="43"  t-foreach="o.batch_planted_ids" t-as="f" style="font-family: times; font-size:8pt;">
                                                <td style="width:10%; color:#568eff;">1</td>
                                                <td style="width:10%; color:#568eff;">1</td>
                                                <td style="width:10%; color:#568eff;">1</td>
                                                <td style="width:10%; color:#568eff;">1</td>
                                                <tr height="43" t-foreach="f.bpb_id.requestline_ids" t-as="s" style="font-family: times; font-size:8pt;" >
                                                        <td style="width:10%;"><span t-field="s.inherit_location_id"/></td>
                                                        <td style="width:10%;"><span /></td>
                                                        <td style="width:10%;"><span t-field="s.large_area"/></td>
                                                        <td style="width:10%;"><span t-field="s.qty_request"/></td>
                                                </tr>
                                            </tr>
                                        </tbody>
                                </table>
                            </div>
                            <div class="row col-xs-2">
                                <table class="table table-condensed">
                                    <thead style="background-color:#568eff;border: 1px solid #568eff;color:#ffffff;">
                                        <tr height="55">
                                            <th style="width:10%; border-bottom: 0px solid black !important;">Seed Delivery</th>
                                            <th style="width:10%; border-bottom: 0px solid black !important;">Seed Scrap</th>
                                        </tr>
                                    </thead>
                                    <tbody class="selection_tbody">
                                            <tr height="43" t-foreach="o.batch_planted_ids" t-as="f" style="font-family: times; font-size:8pt;">
                                                <td style="width:10%; color:#568eff;">&#160;</td>
                                                <td style="width:10%; color:#568eff;">&#160;</td>
                                                <td style="width:10%; color:#568eff;">&#160;</td>
                                                <td style="width:10%; color:#568eff;">&#160;</td>
                                                <tr height="43" t-foreach="f.bpb_id.requestline_ids" t-as="s" style="font-family: times; font-size:11pt;" >
                                                    <td style="width:10%; color:#568eff;"><span t-field="s.inherit_location_id"/></td>
                                                    <td style="width:10%;"></td>
                                                    <td style="width:10%;"></td>
                                                    <td style="width:10%;"></td>
                                                </tr>
                                            </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>

                    <!--Spesification Seed head Row-->
                    <div class="row col-xs-12" style="font-family: times;border: 1px solid #568eff;color:black; font-size:12pt;">
                            <div class="col-xs-12" >
                                <b style="text-align:left;font-family: times;" >Spesification Seed</b>
                            </div>
                    </div>

                     <div class="row col-xs-12" style="background-color:#568eff;border: 1px solid #568eff;color:#ffffff;">
                        <table class="table table-condensed">
                            <thead style="background-color:#568eff;border: 1px solid #568eff;color:#ffffff;">
                                <tr>
                                    <th style="width:50%;">Spesification Seed</th>
                                    <th style="width:50%;">Age Seed</th>
                                </tr>
                            </thead>

                            <tbody class="selection_tbody">
                                <tr t-foreach="o.batch_planted_ids" t-as="c" style="font-family: times; font-size:8pt;">
                                    <td style="width:50%;"><span t-field="c.variety_id"/></td>
                                    <td style="width:50%;"><span t-field="c.batch_id.age_seed_range"/></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>

                    <!--Transportir Header Row-->
                    <div class="row col-xs-12" style="font-family: times;border: 1px solid #568eff;color:black; font-size:12pt;">
                            <div class="col-xs-12" >
                                <b style="text-align:left;font-family: times;" >Tranportir</b>
                            </div>
                    </div>

                    <div class="row col-xs-12" style="background-color:#568eff;border: 1px solid #568eff;color:#ffffff;">
                        <table class="table table-condensed">
                            <thead style="background-color:#568eff;border: 1px solid #568eff;color:#ffffff;">
                                <tr>
                                    <th style="width:2.5%;">Code VRA</th>
                                    <th style="width:2.5%;">No Police</th>
                                    <th style="width:2.5%;">Driver</th>
                                    <th style="width:2.5%;">Type Vehicle</th>
                                </tr>
                            </thead>

                            <tbody class="selection_tbody">
                                <tr t-foreach="o.dotransportir_ids" t-as="a" style="font-family: times; font-size:8pt;">
                                    <td style="width:2.5%;"><span t-field="a.estate_vehicle_id"/></td>
                                    <td style="width:2.5%;"><span t-field="a.no_vehicle"/></td>
                                    <td style="width:2.5%;"><span t-field="a.driver"/></td>
                                    <td style="width:2.5%;"><span t-field="a.vehicle_type"/></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>

                    <!-- Activitiy Header ROW -->
                    <div class="row col-xs-12" style="font-family: times;border: 1px solid #568eff;color:black; font-size:12pt;">
                        <div class="col-xs-12" >
                            <b style="text-align:left;font-family: times;" >Activity Detail</b>
                        </div>
                    </div>

                    <div class="row col-xs-12" style="background-color:#568eff;border: 1px solid #568eff;color:#ffffff;">
                        <table class="table table-condensed">
                            <thead style="background-color:#568eff;border: 1px solid #568eff;color:#ffffff;">
                                <tr>
                                    <th style="width:2.5%;">Activity</th>
                                    <th style="width:2.5%;">Uom</th>
                                    <th style="width:2.5%;">Price</th>
                                    <th style="width:2.5%;">Volume</th>
                                    <th style="width:2.5%;">Expense</th>
                                    <th style="width:2.5%;">Account</th>
                                </tr>
                            </thead>

                            <tbody class="selection_tbody">
                                <tr t-foreach="o.activityline_ids" t-as="b" style="font-family: times; font-size:8pt;">
                                    <td style="width:2.5%;"><span t-field="b.activity_id"/></td>
                                    <td style="width:2.5%;"><span t-field="b.product_type_id"/></td>
                                    <td style="width:2.5%;"><span t-field="b.price"/></td>
                                    <td style="width:2.5%;"><span t-field="b.qty_product"/></td>
                                    <td style="width:2.5%;"><span t-field="b.result_price"/></td>
                                    <td style="width:2.5%;"><span t-field="b.transportactivity_expense_id"/></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>

                    <!--Sum Total Price Activity-->
                        <div class="row col-xs-12" style="border: 1px solid #568eff;">
                            <div class="col-xs-6" style="text-align:right;" >
                                <table>
                                    <thead>
                                        <tr>
                                            <td>
                                                <b style="text-align:right;font-family: times; font-size:11pt;">Total:</b>
                                            </td>
                                        </tr>
                                    </thead>
                                </table>
                            </div>
                            <div class="col-xs-2" >
                                <div style="text-align:right;">
                                    <table>
                                        <tr>
                                            <td>
                                                <t t-set="variable" t-value="0"/>
                                                <t t-foreach="o.activityline_ids" t-as="m">
                                                    <t t-set="variable" t-value="variable+m.qty_product"/>
                                                </t>
                                                <b t-esc="variable" style="text-align:right;font-family: times; font-size:8pt;"/>
                                            </td>
                                        </tr>
                                    </table>
                                </div>
                            </div>
                            <div class="col-xs-2" >
                                <div style="text-align:right;">
                                    <table>
                                        <tr>
                                            <td>
                                                <t t-set="variable" t-value="0"/>
                                                <t t-foreach="o.activityline_ids" t-as="m">
                                                    <t t-set="variable" t-value="variable+m.result_price"/>
                                                </t>
                                                <b t-esc="variable" style="text-align:right;font-family: times; font-size:8pt;"/>
                                            </td>
                                        </tr>
                                    </table>
                                </div>
                            </div>
                             <div class="col-xs-2" style="text-align:center; border-left:1px solid #568eff;">  </div>
                        </div>
                </div>
            </t>
        </template>


        <template id="reportseeddo_div_report">
            <t t-call="report.html_container">
                <t t-foreach="doc_ids" t-as="doc_id">
                    <t t-raw="translate_doc(doc_id, doc_model, 'partner_id.lang','estate_nursery.report_seeddo_div_document')"/>
                </t>
            </t>
        </template>
    </data>
</openerp>