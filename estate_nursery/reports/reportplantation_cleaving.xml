<?xml version="1.0" encoding="utf-8"?>
<!--Custom report.-->
<openerp>
    <data>
        <template id="report_cleaving_document">
            <t t-call="report.external_layout">
                <div class="page">
                    <!--First Row-->
                        <div class="row col-xs-12" style="font-family: times; background-color:#568eff;border: 1px solid #568eff;color:#ffffff; font-size:20pt;">
                            <div class="col-xs-12" >
                                <p style="text-align:center;font-family: times;">Report Berita Acara Pemisahan Bibit Polytone</p>
                            </div>
                        </div>

                    <!-- SECOND ROW -->
                        <div class="row col-xs-12">
                            <div class="col-xs-12" style="font-family: times;font-size:14pt;">
                                <table>

                                    <thead>
                                        <td><p style="font-family: times; font-size:20pt;">Report Detail</p></td>
                                    </thead>

                                    <tbody>
                                        <tr>
                                            <td><b style="font-family: times; font-size:15pt;">Report Code :</b></td>
                                            <td><p t-field="o.cleaving_code" style="font-family: times; font-size:15pt;"/></td>
                                        </tr>

                                        <tr>
                                            <td><b style="font-family: times; font-size:15pt;">Cleaving Date :</b></td>
                                            <td><p t-field="o.cleaving_date" style="font-family: times; font-size:15pt;"/></td>
                                        </tr>

                                        <tr>
                                            <td><b style="font-family: times; font-size:15pt;">No.Batch :</b></td>
                                            <td><p t-field="o.name" style="font-family: times; font-size:15pt;"/></td>
                                        </tr>

                                        <tr>
                                            <td><b style="font-family: times; font-size:15pt;">Variety :</b></td>
                                            <td><p t-field="o.variety" style="font-family: times; font-size:15pt;"/></td>
                                        </tr>

                                    </tbody>
                                </table>
                            </div>
                        </div>

                        <!-- Third ROW -->
                        <div class="row col-xs-12" style="background-color:#568eff;border: 1px solid #568eff;color:#ffffff;">
                            <div class="col-xs-2">
                                <table>
                                    <tr>
                                        <td><p style="font-family: times; font-size:15pt;">Progeny </p></td>
                                    </tr>
                                </table></div>
                            <div class="col-xs-2">
                                <table>
                                    <tr>
                                        <td><p style="font-family: times; font-size:15pt;">Normal</p></td>
                                    </tr>
                                </table>
                            </div>
                            <div class="col-xs-1">
                                <table>
                                    <tr>
                                        <td><p style="font-family: times; font-size:15pt;">Polytone</p></td>
                                    </tr>
                                </table>
                            </div>
                            <div class="col-xs-2">
                                <table>
                                    <tr>
                                        <td><p style="font-family: times; font-size:15pt;">Total</p></td>
                                    </tr>
                                </table>
                            </div>
                            <div class="col-xs-1">
                                <table>
                                    <tr>
                                        <td><p style="font-family: times; font-size:15pt;">Hasil Pemisahan</p></td>
                                    </tr>
                                </table>
                            </div>
                            <div class="col-xs-2">
                                <table>
                                    <tr>
                                        <td><p style="font-family: times; font-size:15pt;">Saldo Akhir</p></td>
                                    </tr>
                                </table>
                            </div>
                            <div class="col-xs-2">
                                <table>
                                    <tr>
                                        <td><p style="font-family: times; font-size:15pt;">Keterangan</p></td>
                                    </tr>
                                </table>
                            </div>
                        </div>

                      <!-- Forth ROW -->
                      <div class="row col-xs-12" style="border: 1px solid #568eff;">
                                <div class="col-xs-12">
                                    <div class="col-xs-2">
                                        <div>
                                            <table>
                                                <tr>
                                                    <td><p t-esc="o.progeny" style="text-align:left;font-family: times; font-size:14pt;"/></td>
                                                </tr>
                                            </table>
                                        </div>
                                    </div>
                                    <div class="col-xs-2" style="text-align:right;border-left:1px solid #568eff;">
                                        <div>
                                            <table>
                                                <tr>
                                                    <td><p t-esc="o.qty_singlebatch" style="text-align:right;font-family: times; font-size:14pt;"/></td>
                                                </tr>
                                            </table>
                                        </div>
                                    </div>
                                    <div class="col-xs-1" style="text-align:right;border-left:1px solid #568eff;">
                                        <div>
                                            <table>
                                                <tr>
                                                    <td><p t-esc="o.qty_doublebatch" style="text-align:right;font-family: times; font-size:14pt;"/></td>
                                                </tr>
                                            </table>
                                        </div>
                                    </div>
                                    <div class="col-xs-2" style="text-align:right;border-left:1px solid #568eff;">
                                        <div>
                                            <table>
                                                <tr>
                                                    <td><p t-esc="o.qty_plante" style="text-align:right;font-family: times; font-size:14pt;"/></td>
                                                </tr>
                                            </table>
                                        </div>
                                    </div>
                                    <div class="col-xs-1" style="text-align:center;border-left:1px solid #568eff;">
                                        <div>
                                            <table>
                                                <tr>
                                                    <td><p t-esc="o.qty_normal" style="text-align:left;font-family: times; font-size:14pt;"/></td>
                                                </tr>
                                            </table>
                                        </div>
                                    </div>
                                    <div class="col-xs-2" style="text-align:right;border-left:1px solid #568eff;">
                                        <div>
                                            <table>
                                                <tr>
                                                    <td><p t-esc="o.qty_total" style="text-align:right;font-family: times; font-size:14pt;"/></td>
                                                </tr>
                                            </table>
                                        </div>
                                    </div>
                                    <div class="col-xs-" style="text-align:right;border-left:1px solid #568eff;">
                                       <t t-foreach="o.cleavingline_ids" t-as="a">
                                            <div>
                                                <table>
                                                    <tr>
                                                        <td><p t-esc="a.comment" style="text-align:right;font-family: times; font-size:14pt;"/></td>
                                                    </tr>
                                                </table>
                                            </div>
                                        </t>
                                    </div>
                                </div>
                      </div>

                    <!-- Fifth ROW -->
                    <div class="row col-xs-12" style="border: 1px solid #568eff;">
                        <div class="col-xs-2" style="text-align:right;" >
                            <table>
                                <thead>
                                    <tr>
                                        <td>
                                            <b style="text-align:right;font-family: times; font-size:15pt;">Total:</b>
                                        </td>
                                    </tr>
                                </thead>
                            </table>
                        </div>
                        <div class="col-xs-2" >
                            <div>
                                <table>
                                    <tr>
                                        <td><p t-esc="o.qty_singlebatch" style="text-align:left;font-family: times; font-size:14pt;"/></td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                        <div class="col-xs-1" >
                             <div>
                                <table>
                                    <tr>
                                        <td><p t-esc="o.qty_doublebatch" style="text-align:left;font-family: times; font-size:14pt;"/></td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                        <div class="col-xs-2">
                             <div>
                                <table>
                                    <tr>
                                        <td><p t-esc="o.qty_plante" style="text-align:left;font-family: times; font-size:14pt;"/></td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                        <div class="col-xs-1">
                             <div>
                                <table>
                                    <tr>
                                        <td><p t-esc="o.qty_normal" style="text-align:left;font-family: times; font-size:14pt;"/></td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                        <div class="col-xs-2" >
                            <div>
                                <table>
                                    <tr>
                                        <td><p t-esc="o.qty_total" style="text-align:left;font-family: times; font-size:14pt;"/></td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                        <div class="col-xs-2" >
                            <div style="text-align:right;">
                            </div>
                        </div>
                    </div>
                </div>
            </t>
        </template>

        <template id="reportcleaving_div_report">
            <t t-call="report.html_container">
                <t t-foreach="doc_ids" t-as="doc_id">
                    <t t-raw="translate_doc(doc_id, doc_model, 'partner_id.lang','estate_nursery.report_cleaving_document')"/>
                </t>
            </t>
        </template>
    </data>
</openerp>
