<?xml version="1.0" encoding="utf-8"?>
<!--Custom report.-->
<openerp>
    <data>
        <template id="report_plantation_div_document">
            <t t-call="report.external_layout">
                <div class="page">
                    <!--First Row-->
                        <div class="row col-xs-12">
                            <div class="col-xs-12" style="background-color:#568eff;border: 1px solid #568eff;color:#ffffff;">
                                <h3>Report Pre Nursery</h3>
                            </div>
                        </div>

                    <!-- SECOND ROW -->
                        <div class="row col-xs-12">
                            <div class="col-xs-8" style="border-left:1px solid #568eff;">
                                <h4>Report Detail</h4><br/>
                                    <strong>Report Name: <p t-field="o.name"/></strong>
                            </div>
                            <div class="col-xs-2" style="text-align:right;border-left:1px solid #568eff;">
                                <strong>Report Date: <p t-field="o.report_date"/></strong>
                                <strong>Estate:<p t-field="o.kebun_location_id"/></strong><br/>
                            </div>
                        </div>

                        <!-- Third ROW -->
                        <div class="row col-xs-12" style="background-color:#568eff;border: 1px solid #568eff;color:#ffffff;">
                            <div class="col-xs-1">Batch No.</div>
                            <div class="col-xs-1">Variety</div>
                            <div class="col-xs-1">DO</div>
                            <div class="col-xs-1">Planted</div>
                            <div class="col-xs-8">
                                <div class="col-xs-12">
                                    <div class="col-xs-1" style="text-align:center; border-left:1px solid #568eff;"><p>Selection Date</p></div>
                                    <div class="col-xs-1" style="text-align:center; border-left:1px solid #568eff;"><p>Selection Stage</p></div>
                                    <div class="col-xs-1" style="text-align:center; border-left:1px solid #568eff;"><p>Selection Information</p></div>
                                    <div class="col-xs-5">
                                        <div class="col-xs-12">
                                            <div class="col-xs-2" style="text-align:center; border-left:1px solid #568eff;">1</div>
                                            <div class="col-xs-1" style="text-align:center; border-left:1px solid #568eff;">2</div>
                                            <div class="col-xs-1" style="text-align:center; border-left:1px solid #568eff;">3</div>
                                            <div class="col-xs-1" style="text-align:center; border-left:1px solid #568eff;">4</div>
                                            <div class="col-xs-2" style="text-align:center; border-left:1px solid #568eff;">5</div>
                                            <div class="col-xs-1" style="text-align:center; border-left:1px solid #568eff;">6</div>
                                            <div class="col-xs-1" style="text-align:center; border-left:1px solid #568eff;">7</div>
                                            <div class="col-xs-1" style="text-align:center; border-left:1px solid #568eff;">8</div>
                                            <div class="col-xs-2" style="text-align:center; border-left:1px solid #568eff;">9</div>
                                        </div>
                                    </div>
                                    <div class="col-xs-2" style="text-align:center;">Total Abnormal</div>
                                    <div class="col-xs-2" style="text-align:center;">Comment</div>
                                </div>
                            </div>
                        </div>

                      <!-- Forth ROW -->
                      <div class="row col-xs-12" style="border: 1px solid #568eff;">
                            <t t-foreach="o.batch_ids"  t-as="i">
                                <div class="col-xs-12">
                                    <div class="col-xs-1" style="border-left:1px solid #568eff;">
                                        <div><p t-esc="i.name"/></div>
                                    </div>
                                    <div class="col-xs-1" style="border-left:1px solid #568eff;">
                                        <p t-field="i.variety_id.name"/>
                                    </div>
                                    <div class="col-xs-1" style="border-left:1px solid #568eff;">
                                        <p t-field="i.qty_received"/>
                                    </div>
                                    <div class="col-xs-1" style="border-left:1px solid #568eff;">
                                        <p t-field="i.qty_planted"/>
                                    </div>
                                    <div class="col-xs-8" style="border-left:1px solid #568eff;">
                                        <t t-foreach="i.selection_ids" t-as="a">
                                            <div class="col-xs-12">
                                                <div class="col-xs-1" style="text-align:center; border-left:1px solid #568eff;">
                                                    <span t-field="a.selection_date"/>
                                                </div>
                                                <div class="col-xs-1" style="text-align:center; border-left:1px solid #568eff;">
                                                    <span t-field="a.selectionstage_id.name"/>
                                                </div>
                                                <div class="col-xs-1" style="text-align:center; border-left:1px solid #568eff;">
                                                    <span t-field="a.nursery_information"/>
                                                </div>
                                                <div class="col-xs-5" style="text-align:center; border-left:1px solid #568eff;">
                                                    <t t-foreach="a.selectionline_ids" t-as="s">
                                                        <div class="col-xs-12">
                                                            <div class="col-xs-2" style="text-align:center; border-left:1px solid #568eff;">
                                                                <t t-if="s.cause_id.sequence == 1">
                                                                    <span t-field="s.qty"/>
                                                                </t>
                                                            </div>
                                                            <div class="col-xs-1" style="text-align:center; border-left:1px solid #568eff;">
                                                                <t t-if="s.cause_id.sequence == 2">
                                                                    <span t-field="s.qty"/>
                                                                </t>
                                                            </div>
                                                            <div class="col-xs-1" style="text-align:center; border-left:1px solid #568eff;">
                                                                <t t-if="s.cause_id.sequence == 3">
                                                                    <span t-field="s.qty"/>
                                                                </t>
                                                            </div>
                                                            <div class="col-xs-1" style="text-align:center; border-left:1px solid #568eff;">
                                                                <t t-if="s.cause_id.sequence == 4">
                                                                    <span t-field="s.qty"/>
                                                                </t>
                                                            </div>
                                                            <div class="col-xs-2" style="text-align:center; border-left:1px solid #568eff;">
                                                                <t t-if="s.cause_id.sequence == 5">
                                                                    <span t-field="s.qty"/>
                                                                </t>
                                                            </div>
                                                            <div class="col-xs-1" style="text-align:center; border-left:1px solid #568eff;">
                                                                <t t-if="s.cause_id.sequence == 6">
                                                                    <span t-field="s.qty"/>
                                                                </t>
                                                            </div>
                                                            <div class="col-xs-1" style="text-align:center; border-left:1px solid #568eff;">
                                                                <t t-if="s.cause_id.sequence == 7">
                                                                    <span t-field="s.qty"/>
                                                                </t>
                                                            </div>
                                                            <div class="col-xs-1" style="text-align:center; border-left:1px solid #568eff;">
                                                                <t t-if="s.cause_id.sequence == 8">
                                                                    <span t-field="s.qty"/>
                                                                </t>
                                                            </div>
                                                            <div class="col-xs-2" style="text-align:center; border-left:1px solid #568eff;">
                                                                <t t-if="s.cause_id.sequence == 9">
                                                                    <span t-field="s.qty"/>
                                                                </t>
                                                            </div>
                                                     </div>
                                                    </t>
                                                </div>
                                                <div class="col-xs-2" style="text-align:center; border-left:1px solid #568eff;">
                                                    <span t-field="a.qty_abnormal"/>
                                                </div>
                                                <div class="col-xs-2" style="text-align:center; border-left:1px solid #568eff;">
                                                    <span t-field="a.comment"/>
                                                </div>
                                            </div>
                                        </t>
                                    </div>
                            </div>
                        </t>
                    </div>

                    <!-- Fifth ROW -->
                    <div class="row col-xs-12" style="border: 1px solid #568eff;">
                        <div class="col-xs-2" style="text-align:right;border: 1px solid #568eff;">
                            <p><strong>Total:</strong></p>
                        </div>
                        <div class="col-xs-1" style="text-align:center;border: 1px solid #568eff;border-left:0px;">
                            <span t-field="o.total_do"/>
                        </div>
                        <div class="col-xs-1" style="text-align:center;border: 1px solid #568eff;border-left:0px;">
                            <span t-field="o.total_planted"/>
                        </div>
                        <div class="col-xs-8" style="text-align:center;">
                            <div class="col-xs-12">
                                <div class="col-xs-1" ><p></p></div>
                                <div class="col-xs-1" ><p></p></div>
                                <div class="col-xs-1" ><p></p></div>
                                <div class="col-xs-5" >
                                    <div class="col-xs-12">
                                        <div class="col-xs-2" style="border-left:1px solid #568eff;">
                                        </div>
                                        <div class="col-xs-1" style="border-left:1px solid #568eff;">

                                        </div>
                                        <div class="col-xs-1" style="border-left:1px solid #568eff;">

                                        </div>
                                        <div class="col-xs-1" style="border-left:1px solid #568eff;">

                                        </div>
                                        <div class="col-xs-2" style="border-left:1px solid #568eff;">

                                        </div>
                                        <div class="col-xs-1" style="border-left:1px solid #568eff;">

                                        </div>
                                        <div class="col-xs-1" style="border-left:1px solid #568eff;">

                                        </div>
                                        <div class="col-xs-1" style="border-left:1px solid #568eff;">

                                        </div>
                                        <div class="col-xs-2" style="border-left:1px solid #568eff;">

                                        </div>
                                    </div>
                                </div>
                                <div class="col-xs-2" style="text-align:center;border-left:1px solid #568eff;">
                                </div>
                                <div class="col-xs-2" style="text-align:center;border-left:1px solid #568eff;">
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </t>

        </template>
        <template id="reportplantation_div_report">
            <t t-call="report.html_container">
                <t t-foreach="doc_ids" t-as="doc_id">
                    <t t-raw="translate_doc(doc_id, doc_model, 'partner_id.lang','estate_nursery.report_plantation_div_document')"/>
                </t>
            </t>
        </template>
    </data>
</openerp>