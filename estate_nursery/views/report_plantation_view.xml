<openerp>
    <data>
        <!--view , batchids-->
         <record model="ir.ui.view" id="view_form_report_plantation">
             <field name="name">report plantation</field>
             <field name="model">estate.nursery.batch</field>
             <field name="inherit_id" ref="estate_nursery.view_seed_batch_form"/>
             <field name="arch" type="xml">
                 <field name="culling_location_id" position="after">
                     <field name="reportline_id" string="Choose Report"
                            attrs="{'readonly':[('state','=','done')]}"/>
                 </field>
             </field>
         </record>
        <!--view , selectionids-->
         <record model="ir.ui.view" id="view_form_report_plantation">
             <field name="name">report plantation</field>
             <field name="model">estate.nursery.selection</field>
             <field name="inherit_id" ref="estate_nursery.view_form_selection_nursery"/>
             <field name="arch" type="xml">
                 <field name="date_plant" position="after">
                     <field name="reportline_id" string="Choose Report"
                            attrs="{'invisible': [('state','=','draft')], 'readonly':[('state','=','done')]}"/>
                 </field>
             </field>
         </record>
        <!--view , selectionlineids-->
         <record model="ir.ui.view" id="view_form_report_plantation">
             <field name="name">report plantation</field>
             <field name="model">estate.nursery.selectionline</field>
             <field name="inherit_id" ref="estate_nursery.view_form_selectionline"/>
             <field name="arch" type="xml">
                 <field name="location_id" position="after">
                     <field name="reportline_id" string="Choose Report"/>
                 </field>
             </field>
         </record>

        <!--view ,reportline -->
       <record model="ir.ui.view" id="view_tree_report_plantation">
            <field name="name">Report Plantation</field>
            <field name="model">estate.nursery.reportline</field>
            <field name="arch" type="xml">
                <tree string="Nursery Report">
                    <field name="name"/>
                    <field name="report_date"/>
                    <field name="kebun_location_id"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="view_form_report">
            <field name="name">report plantation</field>
            <field name="model">estate.nursery.reportline</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <group coolspan="10">
                            <field name="name"/>
                            <field name="kebun_location_id" string="Estate Location"/>
                        </group>
                        <group>
                            <field name="report_date"/>
                        </group>
                    </group>
                    <group>
                        <notebook>
                            <page string="Report Batch Line">
                                <tree>
                                    <field name="batch_ids" />

                                </tree>
                            </page>
                            <page string="Report Selection Line">
                                <tree>
                                    <field name="selection_ids" />
                                </tree>
                            </page>
                            <page string="Report Selection Line">
                                <tree>
                                    <field name="selectionline_ids" />
                                </tree>
                            </page>
                        </notebook>
                    </group>
                </form>
            </field>
        </record>

         <record model="ir.actions.act_window" id="action_list_reportplantation">
            <field name="name">Report Plantation</field>
            <field name="res_model">estate.nursery.reportline</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="nursery_line_report_plantation" name="Report Batch and Selection"
                  parent="estate_nursery_menu"
                  action="action_list_reportplantation"
                  sequence="16"
                />

    </data>
</openerp>