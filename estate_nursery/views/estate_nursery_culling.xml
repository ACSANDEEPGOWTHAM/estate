<openerp>
    <data>
        <!--View Tree, Culling -->
        <record model="ir.ui.view" id="view_tree_culling">
            <field name="name">Nursery Culling Tree</field>
            <field name="model">estate.nursery.culling</field>
            <field name="arch" type="xml">
                <tree string="Nursery Culling View">
                    <field name="culling_code" string="Culling no"/>
                    <field name="culling_location_id" string="Location culling"/>
                    <field name="culling_date" string="Culling Date"/>
                    <field name="quantitytotal_abnormal" string="Quantity Abnormal"/>
                </tree>
            </field>
        </record>

        <!--view form,culling-->
        <record model="ir.ui.view" id="view_form_culling">
            <field name="name">Nursery Culling</field>
            <field name="model">estate.nursery.culling</field>
            <field name="arch" type="xml">
                <form string="Nursery Culling View">
                    <header coolspan="10">

                        <button name="signal_draft" type="workflow"
                                string="Reject"
                                class="oe_highlight"
                                states="confirmed,approved1,approved2"
                                groups="estate.group_assistant"/>

                        <button name="signal_confirm" type="workflow"
                                string="Confirmed"
                                class="oe_highlight"
                                states="draft"
                                groups="estate.group_assistant" />

                        <button name="signal_done" type="workflow"
                                string="Done"
                                class="oe_highlight"
                                states="approved2"
                                groups="estate.group_manager"/>

                        <button name="signal_approved1" type="workflow"
                                string="Estate Kasie"
                                class="oe_highlight"
                                states="confirmed"
                                groups="estate.group_assistant" />

                        <button name="signal_approved2" type="workflow"
                                string="Estate Manager"
                                class="oe_highlight"
                                states="approved1"
                                groups="estate.group_manager"/>

                         <field name="state" widget="statusbar"
                               statusbar_visible="draft,confirmed,approved1,approved2,done"
                               statusbar_color='{"draft":"blue"}'/>
                    </header>
                    <sheet>

                        <div class="oe_title" colors="blue">
                             <h1>
                                <label string="Culling "
                                       attrs="{'invisible': [('state','not in',('draft','sent','bid'))]}"/>
                                <label string="Request For Culling "
                                       attrs="{'invisible': [('state','in',('draft','sent','bid'))]}"/>
                                <field name="culling_code" class="oe_inline" readonly="1" />
                             </h1>
                         </div>

                        <group coolspan="10">
                            <group>
                                <field name="selectionform" string="Select Type "/>
                                <field name="location_type" string="Location Loss"/>
                                <field name="culling_date"/>
                            </group>
                            <group>
                                <field name="quantitytotal_abnormal" attrs="{'invisible':[('selectionform','!=', '1')]}"/>
                                <field name="quantitytotal_abnormal_selection"
                                       attrs="{'invisible':[('selectionform','!=', '2')]}"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Culling Line Batch detail" attrs="{'invisible':[('selectionform','!=', '1')]}">
                                <field name="cullingline_ids" />
                            </page>
                            <page string="Culling Line Selection detail" attrs="{'invisible':[('selectionform','!=', '2')]}" >
                                <field name="cullinglineselection_ids" />
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

         <!--view Tree, Culling line selection-->
        <record model="ir.ui.view" id="view_tree_nursery_cullinglineselection">
            <field name="name">Nursery Culling line selection Tree</field>
            <field name="model">estate.nursery.cullinglineselection</field>
            <field name="arch" type="xml">
                <tree string="Nursery Culling line View" editable="top">
                    <field name="batch_id" string="Batch No"/>
                    <field name="selection_id" string="Selection No" domain="[('batch_id','=',batch_id)]"/>
                    <field name="selectionstage_id" String="Selection Stage"/>
                    <field name="qty_normalbatch" string="&#931;Nor Batch "/>
                    <field name="qty_abnormalselection" string="&#931;Abn Selection"/>
                    <field name="qty_normalselection" string="&#931;Nor Selection"/>
                    <field name="culling_location_id" string="Location Culling"/>
                    <field name="qty_total_abnormal_selection" string="&#931; QTY Abnomal"/>
                    <field name="qty_planted_selection" string="&#931; QTY Planted"/>
                </tree>
            </field>
        </record>


        <!--view Tree, Culling line batch-->
        <record model="ir.ui.view" id="view_tree_nursery_cullingline">
            <field name="name">Nursery Culling line Tree</field>
            <field name="model">estate.nursery.cullinglinebatch</field>
            <field name="arch" type="xml">
                <tree string="Nursery Culling line View" editable="top">
