<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data noupdate="0">

        <!--Estate Payroll Officer-->
        <!--
        Limit Estate Payroll Officer to see PKWT Daily salary only.
        -->
        <record id="estate_payroll_officer_estate_worker" model="ir.rule">
            <field name="name">Estate Payroll Officer</field>
            <field name="model_id" ref="hr_payroll.model_hr_payslip"/>
            <field name="domain_force">[('employee_id.contract_type','=', '2'),('employee_id.contract_period', '=', '2')]</field>
            <field name="perm_create" eval="True"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_unlink" eval="True"/>
            <field name="groups" eval="[(4, ref('estate_payroll.estate_payroll_officer'))]"/>
        </record>
        <!--/Estate Payroll Officer-->
    </data>
</openerp>