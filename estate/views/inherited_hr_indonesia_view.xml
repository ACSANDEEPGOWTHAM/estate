<?xml version="1.0" encoding="utf-8"?>

<openerp>
    <data>
        <!-- PKWT Daily required estate at its NIK -->
        <record id="inherited_hr_indonesia_view_form" model="ir.ui.view">
            <field name="name">Inherited HR Indonesia Form</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@name='employee_type']" position="inside">
                    <field name="estate_id"/>
                </xpath>
            </field>
        </record>
    </data>
</openerp>