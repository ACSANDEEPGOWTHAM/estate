<odoo>
    <data noupdate="0">
        <record id="email_template_purchase_request" model="mail.template">
          <field name="name">Email Template Purchase Request</field>
          <field name="email_from">admin@palmagroup.co.id</field>
          <field name="subject">Approval Purchase Request For ${object.assigned_to.name}</field>
          <field name="email_to">${object.assigned_to.login}</field>
          <field name="lang">${object.lang}</field>
          <field name="model_id" ref="purchase_request.model_purchase_request"/>
          <field name="auto_delete" eval="True"/>
	  <field name="body_html">
            <![CDATA[
            <style>
             input[type="submit"]{background:#f5f5f7; color:#ACCC6C}
            </style>
	      <p>Dear ${(object.assigned_to.name)},<br/>
	      <br/>
	      You have one approval Purchase Request , ${(object.complete_name)}<br/>

          <br/>

          <p>
	        With Detail And Summary:
            <br/>
            Requested By , ${(object.requested_by.name)}

            <br/>

            <table class="table table-striped table-condensed table-bordered">
                <tr class="label_table_header">
                    <th>
                      Barang/Jasa
                    </th>
                    <th>
                      Jumlah
                    </th>
                    <th>
                      Harga Perkiraan per Satuan
                    </th>
                    <th>
                      Total Perkiraan Harga
                    </th>
                </tr>
                % for item in object.line_ids:
                <tr>
                    <td>
                        <span>${item.product_id.name}</span>
                    </td>
                    <td>
                        <span>${item.product_qty}</span>
                    </td>
                    <td>
                        <span>${item.price_per_product}</span>
                    </td>

                   <td>
                        <span>${item.total_price}</span>
                    </td>
                </tr>
                % endfor
            </table>
          <br/>

          <p>Total Estimated Price, ${(object.total_estimate_price)}</p>

	      <br/>
	      </p>

          <p>
	      Please Follow This Step To Approve Purchase Request:
	      </p>

	      <br/>

	      </p>

            <div class="container">
              <p>
                Step to Approval Purchase Request.
              </p>

              <p>
                <ul>
                  <li>Login To ERP Palma Group
                     <ul>
                        <li>Click This Button to <a href="${(object.web_url())}/web?db=${(object.database())}#id=${(object.id)}&view_type=form&model=${(object.email_model())}" target="self"><input type="submit" Value="Login"></a></li>
                        <li>Input Your Email Palma Group in Field Username. i.e: aaaa@palmagroup.co.id</li>
                        <li>Input Your Password ERP Palma Group in Field Password.
                            <ul style="list-style-type:circle">
                              <li>If You cannot Login Please Contact Department ICT</li>
                            </ul>
                        </li>
                        <li>Click Button Login </li>
                     </ul>
                  </li>
                  <li>Check Purchase Request Inside ERP Palma Group</li>
                  <li>Click Button Approve Inside Purchase Request in ERP Palma Group</li>
                </ul>
              </p>

            </div>

              Regards,
              <br/>
              ${(object.company_id.name)}
              <br/>

	    ]]>
	  </field>
       </record>
    </data>

