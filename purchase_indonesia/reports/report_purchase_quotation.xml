<?xml version="1.0" encoding="utf-8"?>
<!--Custom report.-->
<openerp>
    <data>
        <template id="report_purchase_quotation">
            <t t-call="report.html_container">
                <t t-foreach="docs" t-as="o">
            		<t t-call="report.internal_layout">
						<div class="page" style="font-family: times; background-color:white; color:black;">
		              		<!-- Header -->
		              		<div class="row" style="text-align:left;">
		              			<div class="col-xs-12" >
		                       		<b>PT 	: <span t-field="o.company_id.name"/> </b>
								</div>
							</div>
							<div class="row" style="text-align:right;">
		              			<div class="col-xs-12" >
		                       		<b>Reff PP	: <span t-field="o.source_purchase_request"/> </b>
								</div>
							</div>	
							<div class="row" style="text-align:center; font-size:20pt;">
		              			<div class="col-xs-12" >
		                       		<b>PERMINTAAN PENAWARAN (QUOTATION)</b>
								</div>
							</div>
							<div class="row" style="text-align:left;">
		              			<div class="col-xs-12" >
		                       		<b>Nama Vendor	: <span t-field="o.partner_id.name"/></b>
								</div>
							</div>
							<div class="row" style="text-align:right;">
		              			<div class="col-xs-12" >
		                       		<b>Date	: <span t-field="o.date_order" t-field-options="{&quot;format&quot;: &quot;dd MMMM yyyy&quot;}"/> </b>
								</div>
							</div>
							
							<!-- Variabel -->
		           			<t t-set="idx" t-value="0"/>
		           			
		           			<!-- Detail Header -->
		           			<div class="row" style="text-align:left;font-size:14pt;">
		              			<table class="table table-striped table-condensed table-bordered" width="100%">
		              			    <thead>
			                            <tr class="label_table_header">
										    <th>
										      No
										    </th>
										    <th>
										      Nama Barang/Jasa
										    </th>
										    <th>
										      Keterangan Barang/Jasa
										    </th>
										    <th>
										      Qty
										    </th>
										    <th>
										      Satuan
										    </th>
										    <th>
										      Harga Satuan
										    </th>
										    <th>
										      Jumlah
										    </th>
										    <th>
										      Status Barang/Jasa <br></br>(Ready/Indent)
										    </th>
										</tr>
									</thead>
									<tbody>
										<t t-foreach="o.order_line" t-as="l">
											<t t-set="idx" t-value="idx+1"/>   	
											<tr>
											    <td>
											      	<span t-esc="idx"/>
											    </td>
											    <td>
											      	<span t-field="l.product_id.name"/>
											    </td>
											    <td>
											      	<span t-field="l.product_id.name"/>
											    </td>
											    <td>
											        <span t-field="l.product_qty" />
											    </td>
											    <td>
											      	<span t-field="l.product_uom"/>
											    </td>
											    <td>
											      	<span t-field="l.price_unit"/>
											    </td>
											    <td>
											      	<span t-field="l.price_subtotal"/>
											    </td>
											    <td>
											      	<span t-field="l.term_of_goods"/>
											    </td>
											</tr>
										</t>
										<tr>
										    <td colspan="5">
										      	Sub Total
										    </td>
										    <td colspan="2">
										      	<span t-field="o.amount_untaxed"/>
										    </td>
										    <td>
										     	&#160; 	
										    </td>
										</tr>
										<tr>
										    <td colspan="5">
										      	Discount
										    </td>
										    <td colspan="2">
										     	&#160; 	
										    </td>
										    <td>
										     	&#160; 	
										    </td>
										</tr>
										<tr>
										    <td colspan="5">
										      	Tax
										    </td>
										    <td colspan="2">
										      	<span t-field="o.amount_tax"/>
										    </td>
										    <td>
										     	&#160; 	
										    </td>
										</tr>
										<tr>
										    <td colspan="5" style="text-align: center;">
										      	GRAN TOTAL
										    </td>
										    <td colspan="2">
										      	<span t-field="o.amount_total"/>
										    </td>
										    <td>
										     	&#160; 	
										    </td>
										</tr>
										<tr>
										    <td colspan="5" class="noborder">
										      	Pembayaran&#160;:
										    </td>
										    <td class="noborder" colspan="2">
										      	<span t-field="o.payment_term_id"/>
										    </td>
										    <td class="noborder">
										     	&#160; 	
										    </td>
										</tr>
										<tr>
										    <td colspan="5" class="noborder">
										      	Alamat Pengiriman&#160;:
										    </td>
										    <td class="noborder" colspan="2">
										      	Kantor Palma Group&#160;/&#160;Site Gorontalo
										    </td>
										    <td class="noborder">
										     	&#160; 	
										    </td>
										</tr>
									</tbody>			
								</table>
								<table width="100%">
		                            <tr>
		                          		<td class="noborder">
		                          		    Confirmed By&#160;:&#160;<span t-field="o.confirmed_by_person"/>
		                          		</td>
                                        <td class="noborder">
                                        	<span t-field="o.confirmed_by"/>
                                        </td>
                                        <td class="noborder">
                                        	<span t-field="o.confirmed_by_value"/>
                                        </td>
                                        <td class="noborder">
                                        	&#160;
                                        </td>
		                          	</tr>
		                       	</table>   	
								<table width="100%">
		                            <tr>
		                          		<td class="noborder" width="50%">
		                          		    Vendor	:
		                          		</td>
                                        <td class="noborder">
                                        	&#160;
                                        </td>
                                        <td class="noborder">
                                        	&#160;
                                        </td>
		                          		<td class="noborder" style="text-align: left;">
		                          		    Name ,
		                          		</td>
		                          	</tr>
                                    <tr>
                                        <td colspan="4" class="noborder">
                                        	&#160;
                                        </td>
		                          	</tr> 
								    <tr>
		                          		<td colspan="2" class="noborder">
		                          		    1.
		                          		</td>
		                          		<td class="noborder" style="text-align: left;">
		                          		    Procurement &amp; Log Staff
		                          		</td>
                                        <td class="noborder" style="text-align: left;">
		                          		    ___________________
		                          		</td>
		                          	</tr>
                                    <tr>
                                        <td colspan="4" class="noborder">
                                        	&#160;
                                        </td>
		                          	</tr> 
		                          	<tr>
		                          		<td colspan="2" class="noborder" width="25%">
		                          		    2.______________________________________
		                          		</td>
		                          		<td class="noborder" style="text-align: left;">
		                          		    Procurement &amp; Log Dept. Head
		                          		</td>
                                        <td class="noborder" style="text-align: left;">
		                          		    ___________________
		                          		</td>
		                          	</tr>
                                    <tr>
                                        <td colspan="4" class="noborder">
                                        	&#160;&#160;&#160;Signature
                                        </td>
		                          	</tr> 
		                          	<tr>
		                          		<td colspan="2" class="noborder">
		                          		    3.
		                          		</td>
		                          		<td class="noborder" style="text-align: left;">
		                          		    Procurement &amp; Log Div. Head
		                          		</td>
                                        <td class="noborder" style="text-align: left;">
		                          		    ___________________
		                          		</td>
		                          	</tr>
                                    <tr>
                                        <td colspan="4" class="noborder">
                                        	&#160;
                                        </td>
		                          	</tr>
								</table>
							</div>		    
						</div>	
                    </t>
                </t>
            </t>
        </template>
    </data>
</openerp>