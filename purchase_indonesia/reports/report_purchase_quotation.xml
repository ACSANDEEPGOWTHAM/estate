<?xml version="1.0" encoding="utf-8"?>
<!--Custom report.-->
<openerp>
    <data>
        <!--
      	<template id="minimal_layout_inherit" inherit_id="report.minimal_layout">
			<xpath expr="//head" position="inside">
		      	<link rel='stylesheet' href="/purchase_indonesia/static/src/css/report_purchase_quotation.css"/>
		  	</xpath>
		</template>
		 -->
        <template id="report_purchase_quotation">
            <t t-call="report.html_container">
                <t t-foreach="docs" t-as="o">
            		<t t-call="report.external_layout">
						<div class="page" style="font-family: times; background-color:white; color:black;">
		              		<!-- Header -->
		              		<div class="row" style="text-align:left;">
		              			<div class="col-xs-12" >
		                       		<b>PT 	: <span t-field="o.company_id.name"/> </b>
								</div>
							</div>
							<div class="row" style="text-align:right;">
		              			<div class="col-xs-12" >
		                       		<b>Reff PP	: <span t-field="o.source_purchase_request"/> </b>
								</div>
							</div>	
							<div class="row" style="text-align:center; font-size:20pt;">
		              			<div class="col-xs-12" >
		                       		<b>PERMINTAAN PENAWARAN (QUOTATION)</b>
								</div>
							</div>
							<div class="row" style="text-align:left;">
		              			<div class="col-xs-12" >
		                       		<b>Nama Vendor	: <span t-field="o.partner_id.name"/></b>
								</div>
							</div>
							<div class="row" style="text-align:right;">
		              			<div class="col-xs-12" >
		                       		<b>Date	: <span t-field="o.date_order" t-field-options="{&quot;format&quot;: &quot;dd MMMM yyyy&quot;}"/> </b>
								</div>
							</div>
							
							<!-- Variabel -->
		           			<t t-set="idx" t-value="0"/>
		           			
		           			<!-- Detail Header -->
		           			<div class="row" style="text-align:left;font-size:14pt;">
		              			<table width="100%">
		                            <tr class="label_table_header">
									    <td>
									      No
									    </td>
									    <td>
									      Nama Barang/Jasa
									    </td>
									    <td>
									      Keterangan Barang/Jasa
									    </td>
									    <td>
									      Qty
									    </td>
									    <td>
									      Satuan
									    </td>
									    <td>
									      Harga Satuan
									    </td>
									    <td>
									      Jumlah
									    </td>
									    <td>
									      Status Barang/Jasa <br></br>(Ready/Indent)
									    </td>
									</tr>
									<t t-foreach="o.order_line" t-as="l">
										<t t-set="idx" t-value="idx+1"/>   	
										<tr>
										    <td>
										      	<span t-esc="idx"/>
										    </td>
										    <td>
										      	<span t-field="l.product_id.name"/>
										    </td>
										    <td>
										      	<span t-field="l.product_id.name"/>
										    </td>
										    <td>
										      	<span t-field="l.product_qty"/>
										    </td>
										    <td>
										      	<span t-field="l.product_uom"/>
										    </td>
										    <td>
										      	&#160;
										    </td>
										    <td>
										      	&#160;
										    </td>
										    <td>
										      	&#160;
										    </td>
										</tr>
									</t>
									<tr>
									    <td colspan="5">
									      	Sub Total
									    </td>
									    <td colspan="2">
									      	&#160;
									    </td>
									    <td>
									     	&#160; 	
									    </td>
									</tr>
									<tr>
									    <td colspan="5">
									      	Discount
									    </td>
									    <td colspan="2">
									     	&#160; 	
									    </td>
									    <td>
									     	&#160; 	
									    </td>
									</tr>
									<tr>
									    <td colspan="5">
									      	Tax
									    </td>
									    <td colspan="2">
									      	&#160;
									    </td>
									    <td>
									     	&#160; 	
									    </td>
									</tr>
									<tr>
									    <td colspan="5" style="text-align: center;">
									      	GRAN TOTAL
									    </td>
									    <td colspan="2">
									      	&#160;
									    </td>
									    <td>
									     	&#160; 	
									    </td>
									</tr>
									<tr>
									    <td colspan="5" class="noborder">
									      	Pembayaran&#160;:
									    </td>
									    <td class="noborder" colspan="2">
									      	Cash&#160;/&#160;Kredit&#160;____&#160;hari
									    </td>
									    <td class="noborder">
									     	&#160; 	
									    </td>
									</tr>
									<tr>
									    <td colspan="5" class="noborder">
									      	Alamat Pengiriman&#160;:
									    </td>
									    <td class="noborder" colspan="2">
									      	Kantor Palma Group&#160;/&#160;Site Gorontalo
									    </td>
									    <td class="noborder">
									     	&#160; 	
									    </td>
									</tr>			
								</table>
								<table width="100%">
		                            <tr>
		                          		<td class="noborder">
		                          		    Confirmed By&#160;:
		                          		</td>
                                        <td class="noborder">
                                        	Fax&#160;/&#160;Email&#160;/&#160;Phone&#160;/&#160;Other
                                        </td>
                                        <td class="noborder">
                                        	&#160;
                                        </td>
                                        <td class="noborder">
                                        	&#160;
                                        </td>
		                          	</tr>
		                       	</table>   	
								<table width="100%">
		                            <tr>
		                          		<td class="noborder" width="50%">
		                          		    Vendor	:
		                          		</td>
                                        <td class="noborder">
                                        	&#160;
                                        </td>
                                        <td class="noborder">
                                        	&#160;
                                        </td>
		                          		<td class="noborder" style="text-align: left;">
		                          		    Name ,
		                          		</td>
		                          	</tr>
                                    <tr>
                                        <td colspan="4" class="noborder">
                                        	&#160;
                                        </td>
		                          	</tr> 
								    <tr>
		                          		<td colspan="2" class="noborder">
		                          		    1.
		                          		</td>
		                          		<td class="noborder" style="text-align: left;">
		                          		    Procurement &amp; Log Staff
		                          		</td>
                                        <td class="noborder" style="text-align: left;">
		                          		    ___________________
		                          		</td>
		                          	</tr>
                                    <tr>
                                        <td colspan="4" class="noborder">
                                        	&#160;
                                        </td>
		                          	</tr> 
		                          	<tr>
		                          		<td colspan="2" class="noborder" width="25%">
		                          		    2.______________________________________
		                          		</td>
		                          		<td class="noborder" style="text-align: left;">
		                          		    Procurement &amp; Log Dept. Head
		                          		</td>
                                        <td class="noborder" style="text-align: left;">
		                          		    ___________________
		                          		</td>
		                          	</tr>
                                    <tr>
                                        <td colspan="4" class="noborder">
                                        	&#160;&#160;&#160;Signature
                                        </td>
		                          	</tr> 
		                          	<tr>
		                          		<td colspan="2" class="noborder">
		                          		    3.
		                          		</td>
		                          		<td class="noborder" style="text-align: left;">
		                          		    Procurement &amp; Log Div. Head
		                          		</td>
                                        <td class="noborder" style="text-align: left;">
		                          		    ___________________
		                          		</td>
		                          	</tr>
                                    <tr>
                                        <td colspan="4" class="noborder">
                                        	&#160;
                                        </td>
		                          	</tr>
								</table>
							</div>		    
						</div>	
                    </t>
                </t>
            </t>
        </template>
    </data>
</openerp>